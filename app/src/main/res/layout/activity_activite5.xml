<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activite5">

    <LinearLayout
        android:id="@+id/lay2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lay1">

        <TextView
            android:id="@+id/var2Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Varibale 2 :"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/var2"
            android:layout_width="171dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50px"
            android:ems="10"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="106dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/var1Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Variable 1 :"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/var1"
            android:layout_width="171dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50px"
            android:ems="10"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lay2">

        <TextView
            android:id="@+id/resultatTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30px"
            android:text="Resultat"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/resultat"
            android:layout_width="168dp"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="1dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lay3">

        <LinearLayout
            android:id="@+id/lay40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="50px"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="56dp"
                android:layout_height="47dp"
                android:layout_marginBottom="50px"
                android:backgroundTint="#72819B"
                android:text="+"
                app:cornerRadius="20px" />

            <Button
                android:id="@+id/btnDiv"
                android:layout_width="56dp"
                android:layout_height="47dp"
                android:backgroundTint="#72819B"
                android:text="/"
                app:cornerRadius="20px" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="50px"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnMoins"
                android:layout_width="56dp"
                android:layout_height="47dp"
                android:layout_marginBottom="50px"
                android:backgroundTint="#72819B"
                android:text="-"
                app:cornerRadius="20px" />

            <Button
                android:id="@+id/btnMulti"
                android:layout_width="56dp"
                android:layout_height="47dp"
                android:backgroundTint="#72819B"
                android:text="*"
                app:cornerRadius="20px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay40"
            android:layout_width="wrap_content"
            android:layout_height="108dp"
            android:layout_margin="50px"
            android:gravity="bottom"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnCls"
                android:layout_width="74dp"
                android:layout_height="47dp"
                android:backgroundTint="#72819B"
                android:text="CLS"
                app:cornerRadius="20px" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnBack2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:backgroundTint="#505050"
        android:text="Retour"
        app:cornerRadius="20px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lay4" />

</androidx.constraintlayout.widget.ConstraintLayout>